{
  "RapidKit Module Config": {
    "prefix": "rk-module-yaml",
    "body": [
      "name: ${1:module-name}",
      "version: \"${2:1.0.0}\"",
      "description: ${3:Module description}",
      "category: ${4|auth,database,cache,communication,core,security,users|}",
      "tier: ${5|free,pro,enterprise|}",
      "",
      "dependencies:",
      "  python:",
      "    - ${6:package-name}>=1.0.0",
      "  modules:",
      "    - ${7:required-module}",
      "",
      "frameworks:",
      "  - ${8|fastapi,nestjs|}",
      "",
      "metadata:",
      "  author: ${9:Author Name}",
      "  license: ${10:MIT}",
      "  tags:",
      "    - ${11:tag1}",
      "    - ${12:tag2}",
      "$0"
    ],
    "description": "RapidKit module.yaml template"
  },
  "RapidKit Base Config": {
    "prefix": "rk-base-config",
    "body": [
      "variables:",
      "  module_name: ${1:module-name}",
      "  module_class: ${2:ModuleClass}",
      "  version: \"${3:1.0.0}\"",
      "",
      "dependencies:",
      "  python:",
      "    - ${4:package}>=1.0.0",
      "",
      "generation:",
      "  output_dir: src/${5:directory}",
      "  templates:",
      "    - source: ${6:template.py.j2}",
      "      target: ${7:output.py}",
      "      condition: ${8:true}",
      "",
      "hooks:",
      "  pre_generate:",
      "    - ${9:command}",
      "  post_generate:",
      "    - ${10:command}",
      "$0"
    ],
    "description": "RapidKit config/base.yaml template"
  },
  "RapidKit Snippets Config": {
    "prefix": "rk-snippets",
    "body": [
      "snippets:",
      "  - anchor: ${1:inject-point}",
      "    content: |",
      "      ${2:# Code to inject}",
      "      ${3:pass}",
      "    condition: ${4:true}",
      "    priority: ${5:100}",
      "",
      "  - anchor: ${6:another-inject-point}",
      "    template: ${7:snippet-template.j2}",
      "    variables:",
      "      ${8:var_name}: ${9:var_value}",
      "$0"
    ],
    "description": "RapidKit config/snippets.yaml template"
  },
  "RapidKit Profile Config": {
    "prefix": "rk-profile",
    "body": [
      "profiles:",
      "  ${1:minimal}:",
      "    description: ${2:Minimal configuration}",
      "    variables:",
      "      ${3:var_name}: ${4:value}",
      "    features:",
      "      - ${5:feature1}",
      "    ",
      "  ${6:standard}:",
      "    description: ${7:Standard configuration}",
      "    extends: ${1:minimal}",
      "    variables:",
      "      ${8:var_name}: ${9:value}",
      "    features:",
      "      - ${5:feature1}",
      "      - ${10:feature2}",
      "$0"
    ],
    "description": "RapidKit config/profiles.yaml template"
  },
  "RapidKit Workspace Config": {
    "prefix": "rk-workspace",
    "body": [
      "{",
      "  \"name\": \"${1:workspace-name}\",",
      "  \"framework\": \"${2|fastapi,nestjs|}\",",
      "  \"pythonVersion\": \"${3:3.10}\",",
      "  \"nodeVersion\": \"${4:18.0.0}\",",
      "  \"projects\": [",
      "    {",
      "      \"name\": \"${5:project-name}\",",
      "      \"mode\": \"${6|demo,full|}\",",
      "      \"profile\": \"${7|minimal,standard,enterprise|}\"",
      "    }",
      "  ]",
      "}",
      "$0"
    ],
    "description": "RapidKit .rapidkitrc.json template"
  }
}
